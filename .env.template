# API Keys - Add your actual keys when using
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration - Render will provide this automatically if you create a PostgreSQL database
DATABASE_URL=postgresql://username:password@host:port/database

# Flask Configuration - Generate random strings for security
FLASK_SECRET_KEY=generate_a_random_string_here
SESSION_SECRET=generate_another_random_string_here

# File Storage Configuration - Using local storage
USE_CLOUD_STORAGE=false